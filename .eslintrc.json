{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "no-underscore-dangle": [
      "error",
      {
        "allow": ["_id"]
      }
    ],
    "indent": ["error", "tab"],
    "no-tabs": 0,
    "import/extensions": ["error", "always", { "ignorePackages": "always" }],
    "class-methods-use-this": 0,
    "consistent-return": 0
  }
}
